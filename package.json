{
  "name": "lakefs-vscode-extension",
  "displayName": "LakeFS Extension",
  "description": "VSCode extension for LakeFS to support git-like functionality.",
  "version": "0.0.1",
  "publisher": "yjcyxky",
  "repository": {
    "type": "git",
    "url": "https://github.com/yjcyxky/lakefs-vscode-extension"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "gitignore",
    "file-decoration",
    "ignore-files",
    "file-explorer"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:lakefs-panel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "LakeFS Extension",
      "properties": {
        "lakefs.ignoreFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [".gitignore", ".lakefsignore"],
          "description": "List of ignore files to monitor (e.g., .gitignore, .customignore)"
        },
        "lakefs.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable file decoration for ignored files"
        },
        "lakefs.lakectlPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to lakectl executable. If empty, will search in PATH environment variable.",
          "scope": "machine-overridable"
        }
      }
    },
    "commands": [
      {
        "command": "lakefs.refreshIgnoreFiles",
        "title": "Refresh Ignore Files",
        "category": "LakeFS"
      },
      {
        "command": "lakefs.toggleDecoration",
        "title": "Toggle File Decoration",
        "category": "LakeFS"
      },
      {
        "command": "lakefs.showStatus",
        "title": "Show Status",
        "category": "LakeFS",
        "icon": "$(git-compare)"
      },
      {
        "command": "lakefs.commit",
        "title": "Commit Changes",
        "category": "LakeFS",
        "icon": "$(git-commit)"
      },
      {
        "command": "lakefs.refresh",
        "title": "Refresh",
        "category": "LakeFS",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lakefs-panel",
          "name": "LakeFS",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "lakefs.refresh",
          "when": "view == lakefs-panel",
          "group": "navigation"
        },
        {
          "command": "lakefs.showStatus",
          "when": "view == lakefs-panel",
          "group": "navigation"
        },
        {
          "command": "lakefs.commit",
          "when": "view == lakefs-panel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "ignore": "^5.3.0"
  }
}